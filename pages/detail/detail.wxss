/* pages/detail/detail.wxss */
.detail-header{
  position:relative;
  width:100%;
  height: 423rpx;
}
.detail-img-wrap{
  width:100%;
  height:100%;
  position: relative;
}
.detail-img-wrap .detail-img{
  width:100%;
  height:100%;
  position:absolute;
  top:50%;
  left:50%;
  transform: translateX(-50%) translateY(-50%);
}
.detail-icon{
  position: absolute;
  width: 138rpx;
  height: 138rpx;
  bottom: -89rpx;
  left: 48rpx;
  border-radius: 38rpx;
  box-shadow: 0 3rpx 6rpx 0 rgba(0,0,0, .2);
}
.detail-content{
  padding: 120rpx 48rpx 120rpx;
  position: relative;
}
.detail-content .share-btn{
  position: absolute;
  top: 40rpx;
  right: 48rpx;
  width: 118rpx;
  height: 48rpx;
  padding: 0;
  margin: 0;
  line-height: 0;
}
.detail-content .share-btn image{
  width:100%;
  height:100%;
}
.detail-name{
  font-size: 64rpx;
  color: #37352F;
  font-weight: bold;
  margin-bottom: 60rpx;
}
.detail-type{
  display: flex;
  vertical-align: center;
  margin-bottom: 38rpx;
}
.detail-type .detail-type-text{
  font-size: 24rpx;
  color: #878682;
  padding-top: 2rpx;
  font-weight:bold;
}
.detail-type .detail-type-content{
  margin-left: 40rpx;
  font-size: 24rpx;
  color: #37352F;
  border-radius: 6rpx;
  padding: 4rpx 10rpx;
  font-weight: bold;
}

.detail-material{
  display: flex;
}
.detail-material .detail-material-text{
  font-size: 24rpx;
  color: #878682;
  padding-top: 2rpx;
  margin-right: 40rpx;
  font-weight:bold;
}
.detail-material .detail-material-content{
  font-size: 24rpx;
  color: #37352F;
  border-radius: 6rpx;
  padding: 4rpx 10rpx;
  background: #EBEBEB;
  margin-right: 20rpx;
  font-weight:bold;
}
.title{
  font-size: 48rpx;
  color: #37352F;
  font-weight: bold;
  margin-bottom: 40rpx;
}
.content{
  font-size: 28rpx;
  color: #37352F;
  line-height: 56rpx;
  font-weight: bold;
}
.detail-description{
  margin-top: 100rpx;
}
.detail-solution{
  margin-top: 100rpx;
}
.link-content{
  margin-top:100rpx;
}
.link-title{
  margin-bottom: 80rpx;
}
.link-list{
  white-space: nowrap;
}
.link-item{
  width: 267rpx;
  height: 344rpx;
  display: inline-block;
  vertical-align: top;
  margin-right: 32rpx;
  border-radius: 8rpx;
  border: 2rpx solid #DDDEDD;
  box-shadow: 0 3rpx 6rpx 0 rgba(0,0,0,0.10);
}

.link-item .link-item-img-wrap{
  width: 100%;
  height:150rpx;
  position: relative;
}
.link-item .link-item-img-wrap .link-item-img{
  width: 100%;
  height:100%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
}

.link-item .link-item-footer{
  padding: 20rpx 0 0 20rpx;
}
.link-item .item-name{
  display: flex;
  line-height:44rpx;
  margin-bottom: 10rpx;
}
.link-item .item-type-icon{
  width:44rpx;
  height:44rpx;
  margin-right: 12rpx;
}
.link-item .item-name text{
  font-size: 28rpx;
  color: #37352F;
  font-weight: bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.link-item .item-type{
  display: inline;
  padding: 2rpx 16rpx;
  font-size: 24rpx;
  color: #37352F;
  border-radius: 4rpx;
  font-weight:bold;
}
.link-item .material-wrap{
  width: 227rpx;
  margin-top: 10rpx;
  overflow:hidden;
}
.link-item .item-material{
  font-size: 24rpx;
  padding: 2rpx 16rpx;
  color: #37352F;
  font-weight: bold;
  background-color: #EBEBEB;
  margin-right: 8rpx;
  border-radius: 4rpx;
}